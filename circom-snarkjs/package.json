{
    "name": "circom-snarkjs-boilerplate",
    "packageManager": "yarn@4.5.1",
    "scripts": {
        "test": "mocha --require ts-node/register tests/**/*.ts",
        "lint": "eslint \"**/*.{js,ts}\"",
        "prettier": "prettier -c .",
        "prettier:write": "prettier -w .",
        "compile": "chmod u+x ./scripts/compile.sh && ./scripts/compile.sh",
        "compile:semaphore-v3": "chmod u+x ./scripts/compile.sh && ./scripts/compile.sh semaphore-v3",
        "compile:semaphore-v4": "chmod u+x ./scripts/compile.sh && ./scripts/compile.sh semaphore-v4",
        "remove:build": "chmod u+x ./scripts/removeBuildFolder.sh && ./scripts/removeBuildFolder.sh"
    },
    "devDependencies": {
        "@types/chai": "^4.3.11",
        "@types/mocha": "^10.0.6",
        "@types/node": "^20.10.7",
        "@types/snarkjs": "^0",
        "@typescript-eslint/eslint-plugin": "^6.18.1",
        "@typescript-eslint/parser": "^6.18.1",
        "chai": "^4.4.0",
        "circom_tester": "^0.0.20",
        "eslint": "^8.56.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^17.1.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "mocha": "^10.2.0",
        "prettier": "^3.1.1",
        "snarkjs": "^0.7.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "@zk-kit/circuits": "^1.0.0-beta",
        "circomlib": "^2.0.5"
    }
}
